# –ù–∞–∑–≤–∞–Ω–∏–µ
import telebot
from telebot import types
bot= telebot.TeleBot('8019374338:AAFhSmlfr7iYw44FJfzAGhrn-OHY9h47nLg')
# –û–±—Ä–∞–±–æ—Ç–∫–∞ –∫–æ–º–∞–Ω–¥—ã —Å—Ç–∞—Ä—Ç
@bot.message_handler(commands=['start'])
def url(message):
    markup= types.ReplyKeyboardMarkup(resize_keyboard=True)
    greet_btn = types.KeyboardButton("üëã –ü–æ–∑–¥–æ—Ä–æ–≤–∞—Ç—å—Å—è")
    markup.add(greet_btn)
    bot.send_message(message.chat.id, "üëã –ü—Ä–∏–≤–µ—Ç! –Ø –ú–∞—Ä–∏—è, –∑–¥–µ—Å—å —Ç—ã –Ω–∞–π–¥–µ—à—å –º–æ–∏ —Ä–µ—Ü–µ–ø—Ç—ã!", reply_markup=markup)

@bot.message_handler(func=lambda message: message.text.lower() == 'üëã –ü–æ–∑–¥–æ—Ä–æ–≤–∞—Ç—å—Å—è')
def handle_custom_start(message):
    url(message) # –≤—ã–∑—ã–≤–∞—Ç—å —Å—Ç–∞—Ä—Ç–æ–≤—É—é —Ñ—É–Ω–∫—Ü–∏—é
# –û–±—Ä–∞–±–æ—Ç–∫–∞ —Ç–µ–∫—Å—Ç–æ–≤—ã—Ö —Å–æ–æ–±—â–µ–Ω–∏–π
@bot.message_handler(content_types=['text'])
def get_text_messages(message):
    if message.text == 'üëã –ü–æ–∑–¥–æ—Ä–æ–≤–∞—Ç—å—Å—è':
        markup = types.ReplyKeyboardMarkup(resize_keyboard=True, row_width=2)
        btn1 = types.KeyboardButton('–ú–æ–π –∫–∞–Ω–∞–ª')
        btn2 = types.KeyboardButton('–†–µ—Ü–µ–ø—Ç—ã –ø—Ç–∏—Ü—ã')
        btn3 = types.KeyboardButton('–û—Ç–∑—ã–≤—ã')
        btn_back = types.KeyboardButton('üîô –ù–∞–∑–∞–¥')
        markup.add(btn1, btn2) 
        markup.add(btn3, btn_back)
        bot.send_message(message.chat.id, '‚ùì –ó–∞–¥–∞–π—Ç–µ –∏–Ω—Ç–µ—Ä–µ—Å—É—é—â–∏–π –≤–æ–ø—Ä–æ—Å', reply_markup=markup)

    elif message.text == '–ú–æ–π –∫–∞–Ω–∞–ª':
        bot.send_message(message.chat.id, '[–ü–µ—Ä–µ—Ö–æ–¥–∏ –∏ –ø–æ–¥–ø–∏—Å—ã–≤–∞–π—Å—è](https://t.me/kylinari_Mari)', parse_mode='Markdown')

    elif message.text == '–†–µ—Ü–µ–ø—Ç—ã –ø—Ç–∏—Ü—ã':
        bot.send_message(message.chat.id, '[–†–µ—Ü–µ–ø—Ç—ã –∑–¥–µ—Å—å üê•](https://t.me/kylinari_Mari/15)', parse_mode='Markdown')

    elif message.text == '–û—Ç–∑—ã–≤—ã':
        bot.send_message(message.chat.id, '[–û—Ç–∑—ã–≤—ã üí¨](https://t.me/+DfHZbo_GVyQ1NDRi)', parse_mode='Markdown')

    elif message.text == 'üîô –ù–∞–∑–∞–¥':
        markup = types.ReplyKeyboardMarkup(resize_keyboard=True)
        btn1 = types.KeyboardButton("üëã –ü–æ–∑–¥–æ—Ä–æ–≤–∞—Ç—å—Å—è")
        markup.add(btn1)
        bot.send_message(message.chat.id, "‚Ü©Ô∏è –í—ã –≤–µ—Ä–Ω—É–ª–∏—Å—å –≤ –≥–ª–∞–≤–Ω–æ–µ –º–µ–Ω—é.", reply_markup=markup)

bot.polling(none_stop=True, interval=0)