# –ù–∞–∑–≤–∞–Ω–∏–µ
import telebot
from telebot import types
bot= telebot.TeleBot('TOKEN')

# –û–±—Ä–∞–±–æ—Ç–∫–∞ –∫–æ–º–∞–Ω–¥—ã /start
@bot.message_handler(commands=['start'])
def show_start_menu(message):
    markup= types.ReplyKeyboardMarkup(resize_keyboard=True)
    greet_btn = types.KeyboardButton("üëã –ü–æ–∑–¥–æ—Ä–æ–≤–∞—Ç—å—Å—è")
    markup.add(greet_btn)
    bot.send_message(message.chat.id, "üëã –ü—Ä–∏–≤–µ—Ç! –Ø –ú–∞—Ä–∏—è, –∑–¥–µ—Å—å —Ç—ã –Ω–∞–π–¥–µ—à—å –º–æ–∏ —Ä–µ—Ü–µ–ø—Ç—ã!", reply_markup=markup)

# –ú–µ–Ω—é —Å –∫–Ω–æ–ø–∫–∞–º–∏: –ú–æ–π –∫–∞–Ω–∞–ª, –†–µ—Ü–µ–ø—Ç—ã –ø—Ç–∏—Ü—ã –∏ —Ç.–¥.
@bot.message_handler(content_types=['text'])
def show_main_buttons(message):
    if message.text == 'üëã –ü–æ–∑–¥–æ—Ä–æ–≤–∞—Ç—å—Å—è':
        markup = types.ReplyKeyboardMarkup(resize_keyboard=True, row_width=2)
        btn1 = types.KeyboardButton('–ú–æ–π –∫–∞–Ω–∞–ª')
        btn2 = types.KeyboardButton('–†–µ—Ü–µ–ø—Ç—ã –ø—Ç–∏—Ü—ã')
        btn3 = types.KeyboardButton('–û—Ç–∑—ã–≤—ã')
        btn_back = types.KeyboardButton('üîô –ù–∞–∑–∞–¥')
        markup.add(btn1, btn2) 
        markup.add(btn3, btn_back)
        bot.send_message(message.chat.id, '–í—ã–±–µ—Ä–∏—Ç–µ –∏–Ω—Ç–µ—Ä–µ—Å—É—é—à–∏–π –ø—É–Ω–∫—Ç‚ùì', reply_markup=markup)

    elif message.text == '–ú–æ–π –∫–∞–Ω–∞–ª':
        bot.send_message(message.chat.id, '[–ü–µ—Ä–µ—Ö–æ–¥–∏ –∏ –ø–æ–¥–ø–∏—Å—ã–≤–∞–π—Å—è] (https://t.me/kylinari_Mari)', parse_mode='Markdown')

    elif message.text == '–†–µ—Ü–µ–ø—Ç—ã –ø—Ç–∏—Ü—ã':
        show_chicken_recipes(message)

    elif message.text == '–û—Ç–∑—ã–≤—ã':
        bot.send_message(message.chat.id, '[–û—Ç–∑—ã–≤—ã üí¨](https://t.me/+DfHZbo_GVyQ1NDRi)', parse_mode='Markdown')

    elif message.text =="–ö–µ—Å–∞–¥–∏–ª—å—è":
        bot.send_message(message.chat.id, '[–ö–µ—Å–∞–¥–∏–ª—å—è](https://t.me/kylinari_Mari/6)', parse_mode='Markdown')

    elif message.text =="–ü–ª–æ–≤":
        bot.send_message(message.chat.id, '[–ü–ª–æ–≤](https://t.me/kylinari_Mari/11)', parse_mode='Markdown')

    elif message.text =="–û–º–ª–µ—Ç –≤ –ª–µ–ø–µ—à–∫–µ":
        bot.send_message(message.chat.id, '[–û–º–ª–µ—Ç –≤ –ª–µ–ø–µ—à–∫–µ](https://t.me/kylinari_Mari/23)', parse_mode='Markdown')

    elif message.text =="–ö—É—Ä–∏—Ü–∞ –ø–æ-—Ñ—Ä–∞–Ω—Ü—É–∑—Å–∫–∏":
        bot.send_message(message.chat.id, '[–ö—É—Ä–∏—Ü–∞ –ø–æ-—Ñ—Ä–∞–Ω—Ü—É–∑—Å–∫–∏](https://t.me/kylinari_Mari/26)', parse_mode='Markdown')
    
    elif message.text == 'üîô –ù–∞–∑–∞–¥':
        show_start_menu(message)
#–ú–µ–Ω—é —Å —Ä–µ—Ü–µ–ø—Ç–∞–º–∏ –ø—Ç–∏—Ü—ã
def show_chicken_recipes(message):
        markup= types.ReplyKeyboardMarkup(resize_keyboard=True)
        recipe1 = types.KeyboardButton("–ö–µ—Å–∞–¥–∏–ª—å—è")
        recipe2 = types.KeyboardButton("–ü–ª–æ–≤")
        recipe3 = types.KeyboardButton("–û–º–ª–µ—Ç –≤ –ª–µ–ø–µ—à–∫–µ")
        recipe4 = types.KeyboardButton("–ö—É—Ä–∏—Ü–∞ –ø–æ-—Ñ—Ä–∞–Ω—Ü—É–∑—Å–∫–∏")
        btn_back = types.KeyboardButton("üîô –ù–∞–∑–∞–¥")
        markup.add(recipe1, recipe2)
        markup.add(recipe3, recipe4)
        markup.add(btn_back)
        bot.send_message(message.chat.id,"–í—ã–±–µ—Ä–∏ —Ä–µ—Ü–µ–ø—Ç:", reply_markup=markup)

bot.polling(none_stop=True, interval=0)
